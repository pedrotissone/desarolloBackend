<h2>Listado de productos con PAGINACIÓN</h2>
{{>navBar}}
<br>
<br>
<input type="text" value="{{carrito._id}}" id="carrito"><a href="/handlebars/carts/{{carrito._id}}">Ver carrito</a>

<ul>
    {{#each payload}}
    <br>
    <li>{{this.title}}</li>
    <li>{{this.description}}</li>
    <li>{{this.price}}</li>
    <li>{{this.thumbnail}}</li>
    <li>{{this.code}}</li>
    <li>{{this.stock}}</li>
    <li>{{this.category}}</li>
    <li>{{this.status}}</li>
    <button onclick="agregar('{{this._id}}')">Agregar al Carrito</button>
    <br>
    
    {{/each}}
</ul>

<br>
<a href="./products?page=1">Pág. 1</a>

{{#if hasPrevPage}}
<a href="./products?page={{prevPage}}">Ant.</a>
{{/if}}

{{#if hasNextPage}}
<a href="./products?page={{nextPage}}">Sig.</a>
{{/if}}

<a href="./products?page={{totalPages}}">Ult. Pág.</a>


<script src="/assets/js/products.js"></script>